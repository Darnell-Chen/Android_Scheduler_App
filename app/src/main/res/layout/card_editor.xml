<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:backgroundTint="@color/black">

    <TextView
        android:id="@+id/courseInputText"
        android:labelFor="@+id/courseInputEdit"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/courseCard"/>

    <EditText
        android:id="@+id/courseInputEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/course_name_hint"
        android:autofillHints="CS2340"
        android:inputType="textCapCharacters"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/professorInputText"
        android:labelFor="@+id/professorInputEdit"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/professorCard" />

    <EditText
        android:id="@+id/professorInputEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Feijo Garcia"
        android:hint="@string/course_professor_hint"
        android:layout_marginBottom="15dp"/>

    <TextView
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/daysOfWeekCard"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="30dp"
        tools:ignore="UseSwitchCompatOrMaterialXml">

        <Switch
            android:id="@+id/mon_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monday_String" />

        <Switch
            android:id="@+id/tue_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tuesday_String" />

        <Switch
            android:id="@+id/wed_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wednesday_String" />

        <Switch
            android:id="@+id/thur_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thursday_String" />

        <Switch
            android:id="@+id/fri_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friday_String" />

    </LinearLayout>

    <TextView
        android:id="@+id/timeInputText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/timeCard"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp">


        <Button
            android:id="@+id/start_time_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/time_button_color"
            android:text="@string/start_time"
            android:textColor="@color/white"
            app:iconTint="@color/white" />

        <Button
            android:id="@+id/end_time_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/time_button_color"
            android:text="@string/end_time"
            android:textColor="@color/white"
            app:iconTint="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/locationInputText"
        android:labelFor="@id/locationInputEdit"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/locationCard"/>


    <EditText
        android:id="@+id/locationInputEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/course_location_hint"
        android:inputType="text"/>


    <Button
        android:id="@+id/save_card_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/save_card_editor"
        android:layout_marginTop="30"/>


</androidx.appcompat.widget.LinearLayoutCompat>